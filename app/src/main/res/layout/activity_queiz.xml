<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    tools:context=".ui.Queiz_Activity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/anim_qa"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:elevation="32dp"
        app:lottie_rawRes="@raw/qa" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginStart="16dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/main_back"
        android:elevation="16dp"
        android:orientation="vertical"
        android:padding="38dp">

        <TextView
            android:id="@+id/txt_question1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="8dp"
            android:text="1 _ question 1 "
            android:textColor="?attr/colorOnPrimary"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtOption1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/btn_back"
            android:elevation="8dp"
            android:onClick="OnClickdOptions"
            android:padding="10dp"
            android:paddingStart="30dp"
            android:tag="option1"
            android:text="option one"
            android:textColor="@color/gray_dark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_option2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/btn_back"
            android:elevation="8dp"
            android:onClick="OnClickdOptions"
            android:padding="10dp"
            android:paddingStart="30dp"
            android:tag="option2"
            android:text="option two"
            android:textColor="@color/gray_dark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_option3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/btn_back"
            android:elevation="8dp"
            android:onClick="OnClickdOptions"
            android:padding="10dp"
            android:paddingStart="30dp"
            android:tag="option3"
            android:text="option"
            android:textColor="@color/gray_dark"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/txt_option4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/btn_back"
            android:elevation="8dp"
            android:onClick="OnClickdOptions"
            android:padding="10dp"
            android:paddingStart="30dp"
            android:tag="option4"
            android:text="option four"
            android:textColor="@color/gray_dark"
            android:textSize="16sp" />


    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNextQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/btn_back_2"
        android:elevation="20dp"
        android:onClick="submit"
        android:padding="12dp"
        android:text="This is My Answar"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="20sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:visibility="invisible"
        android:id="@+id/btnShowResualt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/btn_back_2"
        android:elevation="20dp"
        android:padding="12dp"
        android:onClick="submit"
        android:text="Show Resualt"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="20sp"
        android:textStyle="bold" />


</FrameLayout>