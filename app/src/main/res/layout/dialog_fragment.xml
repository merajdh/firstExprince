<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_Resualt"
    app:strokeColor="@color/gray"
    app:cardElevation="28dp"
    app:strokeWidth="2dp"
    app:cardCornerRadius="18dp"
    android:layout_margin="16dp"
    android:layout_height="wrap_content">


    <LinearLayout
            android:layout_margin="12dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:padding="2dp"
                    android:text="Currect Answare"
                    android:textColor="@color/green"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtCurrentAnswar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="22"
                    android:textColor="?attr/colorOnSecondary"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="12dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="2dp"
                    android:textStyle="bold"
                    android:textColor="@color/red"
                    android:layout_marginTop="40dp"
                    android:textSize="18sp"
                    android:text="Wrong Answare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtWrongAnswar"
                    android:textColor="?attr/colorOnSecondary"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="22"
                    android:textSize="30sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:textColor="?attr/colorOnPrimary"
            android:layout_marginTop="200dp"
            android:elevation="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Save Resualt"
            android:id="@+id/show_resualt"
            android:layout_marginBottom="28dp"
            android:background="@drawable/btn_back"
            android:backgroundTint="@color/blue"
            android:paddingEnd="42dp"
            android:paddingStart="42dp"
            android:padding="10dp"
            android:layout_marginEnd="64dp"
            android:layout_marginStart="64dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />






</FrameLayout>